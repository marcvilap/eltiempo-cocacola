{
	"name": "eltiempo",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/enhanced-img": "^0.1.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tsconfig/svelte": "^5.0.2",
		"autoprefixer": "^10.4.16",
		"cssnano": "^6.0.1",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.6.2",
		"typescript": "^5.3.2",
		"vite": "^5.0.5"
	},
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 120,
		"proseWrap": "never",
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"plugins": [
			"prettier-plugin-svelte",
			"prettier-plugin-tailwindcss"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {},
			"cssnano": {}
		}
	}
}
